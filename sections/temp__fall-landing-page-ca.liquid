.playFallVideo, .playFallVideoM  {
  position: fixed;
  top: 50%;
  bottom: 50%;
  transform: translate(0, -50%);
  z-index: 100000;
  background: rgba(0,0,0,.5);
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  visibility: hidden;
  opacity: 0;
}

.playFallVideo video, .playFallVideoM video {
  position: relative;
  max-width: 900px;
  outline: none;
}
.fall-video-close {
  position: absolute;
  top: 30px;
  right: 30px;
  cursor: pointer;
  filter: invert(1);
  max-width: 32px;
}
.fall-video-close-m {
  position: absolute;
  top: 100px;
  right: 30px;
  cursor: pointer;
  filter: invert(1);
  max-width: 24px;
}
.playFallVideo.active, .playFallVideoM.active {
  visibility: visible;
  opacity: 1;
}
@media (max-width: 991px) {
  .playFallVideo video, .playFallVideoM video {
    max-width: 90%;
  }
}
{% endstyle %}

