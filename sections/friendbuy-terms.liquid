<div class="page-width page-content">

    {% include 'breadcrumbs' %}
  
    <div class="grid">
      <div class="grid__item medium-up--three-quarters medium-up--push-one-eighth">
        <header class="section-header">
          <h1 class="section-header__title">
              {{ section.settings.title }}
            </h1>
        </header>
        <div class="rte rte--nomargin">
          <p>{{ section.settings.disclaimer }}</p>
          <ul>
              <li>{{ section.settings.term1 }} </li>
              <li>{{ section.settings.term2 }} </li>
              <li>{{ section.settings.term3 }} </li>
              <li>{{ section.settings.term4 }} </li>
              <li>{{ section.settings.term5 }} </li>
              <li>{{ section.settings.term6 }} </li>
              <li>{{ section.settings.term7 }} </li>
              <li>{{ section.settings.term8 }} </li>
          </ul>
        </div>
      </div>
    </div>
  
  </div>

  {% schema %}
  {
    "name": "friendbuy terms",
    "settings": [
    {
        "type": "html",
        "id": "title",
        "label": "Title",
        "default": "Sheertex Refer-a-Friend Program Terms & Conditions"
      },
      {
        "type": "html",
        "id": "disclaimer",
        "label": "Disclaimer",
        "default": "As a Refer-a-Friend member (a “Referrer”), you are subject to Sheertex’s Terms of Use and Sheertex’s Privacy Policy (both available on our website), as well as the following additional Terms & Conditions for Sheertex’s Refer-a-Friend program:<br>"
