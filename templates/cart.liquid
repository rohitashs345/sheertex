<script class="cartFlagX"></script><div class="page-width page-content">

  {% include 'breadcrumbs' %}

  <div class="grid">
    <div class="grid__item">
      {% if cart.item_count > 0 %}
        <header class="section-header">
          <h1 class="section-header__title full-cart-header">{{ 'cart.general.title' | t }}</h1>
        </header>

        <form action="/cart" method="post" novalidate class="cart">

          <div class="cart__row small--hide cart__header-labels">
            <div class="grid grid--full">
              <div class="grid__item medium-up--two-fifths medium-up--push-three-fifths">
                <div class="grid grid--full">
                  <div class="grid__item one-third small--half text-center full-cart-column-header">
                    {{ 'cart.label.quantity' | t }}
                  </div>
                  <div class="grid__item two-thirds small--half text-right full-cart-column-header">
                    {{ 'cart.label.total' | t }}
                  </div>
                </div>
              </div>
            </div>
          </div>

          {% for item in cart.items %}
            <div class="cart__row">
              <div class="grid grid--full cart__row--table-large">

                <div class="grid__item medium-up--three-fifths">
                  <div class="grid">

                    <div class="grid__item one-quarter">
                      <a href="{{ item.url | within: collections.all }}" class="cart__image">
                        <img
                          loading="lazy"
                          srcset="{{ item | img_url: '80x' }} 80w,
                                  {{ item | img_url: '180x' }} 180w,
                                  {{ item | img_url: '360x' }} 360w"
                          sizes="(max-width: 780px) 80px, 180px"
                          alt="{{ item.title | escape }}">
                      </a>
                    </div>

                    <div class="grid__item three-quarters">
                      <a href="{{ item.url }}" class="cart__product-name full-cart-header" style="font-size:1rem;">
                        {{ item.product.title }}
                        <span class=tdf-cart-item-t></span>                        
                      </a>

                      {%- unless item.product.has_only_default_variant -%}
                        <p class="cart__product-meta">
                          {{ item.variant.title }}
                        </p>
                      {% endunless %}

                      {% assign property_size = item.properties | size %}
                      {% if property_size > 0 %}
                        {% for p in item.properties %}
                          {% assign first_character_in_key = p.first | truncate: 1, '' %}
                          {% unless p.last == blank or first_character_in_key == '_' %}
                            {{ p.first }}:

                            {% if p.last contains '/uploads/' %}
                              <a href="{{ p.last }}">{{ p.last | split: '/' | last }}</a>
                            {% else %}
                              {{ p.last }}
                            {% endif %}

                            <br>
                          {% endunless %}
                        {% endfor %}
                      {% endif %}

                      <p class="cart__product-meta small--hide">
                        <a href="{{ routes.cart_change_url }}?line={{ forloop.index }}&amp;quantity=0" class="btn btn--tertiary btn--small sheertex-green button-hover tw-border-0 tw-border tw-border-solid tw-border-white">
                          {{ 'cart.general.remove' | t | upcase }}
                        </a>
                      </p>
                    </div>

                  </div>
                </div>

                <div class="grid__item medium-up--two-fifths">
                  <div class="grid grid--full cart__row--table">

                    <div class="grid__item one-third medium-up--one-third medium-up--text-center">

                      <label for="updates_{{ item.key }}" class="visually-hidden">{{ 'cart.label.quantity' | t }}</label>
                      <input type="number" name="updates[]" id="updates_{{ item.key }}" class="cart__product-qty" value="{{ item.quantity }}" min="0" data-id="{{ item.key }}">

                    </div>

                    <div class="grid__item one-third text-center medium-up--hide">
                      <a href="{{ routes.cart_change_url }}?line={{ forloop.index }}&amp;quantity=0" class="btn btn--no-animate btn--small sheertex-green button-hover tw-border-0 tw-border tw-border-solid tw-border-white hover:tw-text-black">
                        <small>{{ 'cart.general.remove' | t | upcase }}</small>
                      </a>
                    </div>

                    <div class="grid__item one-third medium-up--two-thirds text-right">
                      {% if item.original_line_price != item.final_line_price and (item.properties._igLineItemDiscount == "0" or item.properties._igLineItemDiscount == blank or item.properties._igLineItemDiscount == nil) %}
                        <span class="visually-hidden">{{ 'products.general.regular_price' | t }}</span>
                        <small class="cart__price cart__price--strikethrough">{{ item.original_line_price | money }}</small>
                        <span class="visually-hidden">{{ 'products.general.sale_price' | t }}</span>
                        <span class="cart__price cart__discount">{{ item.final_line_price | money }}</span>
                      {% elsif (item.properties._igLineItemDiscount != "0" or item.properties._igLineItemDiscount != blank or item.properties._igLineItemDiscount != nil) %}
                        <span class="cart__price">{{ item.final_line_price | money }}</span>
                      {% else %}
                        <span class="cart__price">{{ item.original_line_price | money }}</span>
                      {% endif %}

                      {% assign discount_without_ig = 0 %}
                      {%- if item.line_level_discount_allocations != blank -%}
                        {%- for discount_allocation in item.line_level_discount_allocations -%}
                          {%- if discount_allocation.discount_application.title  != "intelligems" -%}
                            {% assign discount_without_ig = discount_allocation.amount %}
                            <small class="cart__discount">{{ discount_allocation.discount_application.title }} (-{{ discount_allocation.amount | money }})</small>
                          {%- endif -%}
                        {%- endfor -%}
                      {%- endif -%}

                      {%- if item.unit_price_measurement -%}
                        {%- capture unit_price_base_unit -%}
                          <span class="unit-price-base--{{ section_id }}">
                            {%- if item.unit_price_measurement -%}
                              {%- if item.unit_price_measurement.reference_value != 1 -%}
                                {{ item.unit_price_measurement.reference_value }}
                              {%- endif -%}
                              {{ item.unit_price_measurement.reference_unit }}
                            {%- endif -%}
                          </span>
                        {%- endcapture -%}

                        <div class="product__unit-price">{{ item.unit_price | money }}/{{ unit_price_base_unit }}</div>
                      {%- endif -%}
                    </div>
                  </div>
                </div>

              </div>
            </div>
          {% endfor %}
          {% section 'free-gift-in-cart' %}
          <div class="cart__row">
            <div class="grid">
              {% if settings.cart_notes_enable %}
                <div class="grid__item medium-up--seven-twelfths">
                  <label for="CartSpecialInstructions">{{ 'cart.general.note' | t }}</label>
                  <textarea name="note" class="input-full" id="CartSpecialInstructions">{{ cart.note }}</textarea>
                </div>
              {% endif %}
              <div class="grid__item medium-up--five-twelfths text-center medium-up--text-right{% unless settings.cart_notes_enable %} medium-up--push-seven-twelfths{% endunless %}">
                {% if cart.cart_level_discount_applications != blank %}
                  <div class="grid grid--full cart__row--table">
                    <div class="grid__item one-half medium-up--text-right">
                      <p class="h4">{{ 'cart.general.discounts' | t }}</p>
                    </div>
                    <div class="grid__item one-half">
                      {% for cart_discount in cart.cart_level_discount_applications %}
                        <p class="h4 cart__discount">
                          {{ cart_discount.title }} (-{{ cart_discount.total_allocated_amount | money }})
                        </p>
                      {% endfor %}
                    </div>
                  </div>
                {% endif %}
                <div class="grid grid--full cart__row--table">
                  <div class="grid__item one-half medium-up--text-right">
                    <p class="h4 cart__subtotal">{{ 'cart.general.subtotal' | t | upcase }}</p>
                  </div>
                  <div class="grid__item one-half">
                    <p class="cart__subtotal"><span style="display:none" class="tdf-cart-total-flag"></span>{{ cart.total_price | money }}</p>
                  </div>
                </div>
                <div class="grid grid--full cart__row--table">
                  <div class="grid__item one-half medium-up--text-right">
                    <p class="h4 tw-font-medium tw-mb-0 tw-uppercase tw-tracking-heading">{{ settings.halloween_message }}</p>
                  </div>                  
                </div>

                {% if cart.discount_without_ig > 0 %}
                  {% assign cartTotalDiscounts = cart.total_discounts | money %}
                  <p class="cart__savings">{{ 'cart.general.savings_html' | t: savings: cartTotalDiscounts }}</p>
                {% endif %}
                
                <small>
                {% include 'afterpay-sezzle' %}
                </small>

                <small>
                  {{ 'cart.general.shipping_at_checkout' | t }}<br />
                  {% if settings.enable_currencies %}
                    {%- unless shop.enabled_currencies.size > 1 -%}
                      {{ 'cart.general.orders_processed_in_currency_html' | t: currency: shop.currency }}
                    {%- endunless -%}
                  {% endif %}
                </small>
                {% if settings.cart_terms_conditions_enable %}
                  <p class="ajaxcart__note ajaxcart__note--terms">
                    <input type="checkbox" id="CartPageAgree" />
                    <label for="CartPageAgree">
                      {% if settings.cart_terms_conditions_link != blank %}
                        {{ 'cart.general.terms_html' | t: url: settings.cart_terms_conditions_link }}
                      {% else %}
                        {{ 'cart.general.terms' | t }}
                      {% endif %}
                    </label>
                  </p>
                {% endif %}

                <div class="cart__checkout-wrapper">
                  <button type="submit" name="update" class="btn btn--no-animate cart__update sheertex-green button-hover tw-border-0 tw-border tw-border-solid tw-border-white hover:tw-text-black">
                    {{ 'cart.general.update' | t | upcase }}
                  </button>
                  <button type="submit" name="checkout" class="btn btn--no-animate cart__checkout{% if settings.cart_terms_conditions_enable %} cart__checkout--page{% endif %} sheertex-green button-hover tw-border-0 tw-border tw-border-solid tw-border-white hover:tw-text-black">
                    {{ 'cart.general.checkout' | t | upcase }}
                  </button>

                  {% if additional_checkout_buttons and settings.cart_additional_buttons %}
                    <div class="additional-checkout-buttons">{{ content_for_additional_checkout_buttons }}</div>
                  {% endif %}
                </div>

              </div>
            </div>

          </div>

        </form>

      {% else %}
        <header class="section-header">
          <h1 class="section-header__title full-cart-header">{{ 'cart.general.title' | t }}</h1>
          <p>{{ 'cart.general.empty' | t }}</p>
          <p class="rte">{{ 'cart.general.continue_browsing_html' | t }}</p>
          <!-- adding Shop buttons when cart page is empty -->
          {% if request.locale.iso_code == 'en' %}
            <div id ="cart-emptyButtons" class="emptyCart-buttons"><a href ="/collections/all"><button type="button" class="btn btn--full btn--no-animate tw-rounded-3xl add-to-cart">All Products</button></a><a href ="/collections/staples"><button type="button" class="btn btn--full btn--no-animate add-to-cart">Staples</button></a><a href ="/collections/accessories"><button type="button" class="btn btn--full btn--no-animate add-to-cart">Accessories</button></a></div>
          {% elsif request.locale.iso_code == 'fr' %}
           <div id ="cart-emptyButtons" class="emptyCart-buttons"><a href ="/collections/all"><button type="button" class="btn btn--full btn--no-animate tw-rounded-3xl add-to-cart">Voir Tout</button></a><a href ="/collections/staples"><button type="button" class="btn btn--full btn--no-animate add-to-cart">Articles Essentiels</button></a><a href ="/collections/accessories"><button type="button" class="btn btn--full btn--no-animate add-to-cart">Accessoires</button></a></div>
          {% endif %}
        </header>
      {% endif %}
    </div>
  </div>
</div>
