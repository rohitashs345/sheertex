/* Sparkle Animation */

@keyframes sparkleBottomLeft {
  0% {
    left: 1px;
    top: 0.5rem;
  }
  35% {
    top: 0px;
    left: -19px;
    opacity: 1;
  }
  70%,
  100% {
    top: 0px;
    left: -19px;
    opacity: 0;
  }
}
@keyframes sparkleTopRight {
  0% {
    right: 20px;
    top: 1px;
  }
  35% {
    top: -20px;
    right: 7px;
    opacity: 1;
  }
  70%,
  100% {
    top: -20px;
    right: 7px;
    opacity: 0;
  }
}
@keyframes sparkleTopLeft {
  0% {
    left: 20px;
    top: 1px;
  }
  35% {
    top: -20px;
    left: 7px;
    opacity: 1;
  }
  70%,
  100% {
    top: -20px;
    left: 7px;
    opacity: 0;
  }
}
@keyframes sparkleBottomRight {
  0% {
    right: 3px;
    top: 0.9rem;
  }
  35% {
    top: 0px;
    right: -19px;
    opacity: 1;
  }
  70%,
  100% {
    top: 0px;
    right: -19px;
    opacity: 0;
  }
}
.sparkle-hover-animation__sparkle-set-one {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  &:after {
    content: '';
    position: absolute;
    right: 20px;
    top: 1px;
    width: 9px;
    height: 9px;
    background-image: url(https://cdn.shopify.com/s/files/1/0114/4120/9408/files/sparkle-icon.png?v=1602691165);
  	background-size: 9px 9px;
  	z-index: -1;
	}
  &:before {
    content: '';
    position: absolute;
    left: 1px;
    top: 0.5rem;
    width: 9px;
    height: 9px;
    background-image: url(https://cdn.shopify.com/s/files/1/0114/4120/9408/files/sparkle-icon.png?v=1602691165);
    background-size: 9px 9px;
    z-index: -1;
  }
}
.sparkle-hover-animation__sparkle-set-two {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  &:before {
    content: '';
    position: absolute;
    left: 20px;
    top: 1px;
    width: 9px;
    height: 9px;
    background-image: url(https://cdn.shopify.com/s/files/1/0114/4120/9408/files/sparkle-icon.png?v=1602691165);
    background-size: 9px 9px;
    z-index: -1;
  }
  &:after {
    content: '';
    position: absolute;
    right: 3px;
    top: 0.9rem;
    width: 9px;
    height: 9px;
    background-image: url(https://cdn.shopify.com/s/files/1/0114/4120/9408/files/sparkle-icon.png?v=1602691165);
    background-size: 9px 9px;
    z-index: -1;
  }
}
.sparkle-hover-animation:hover:enabled {
  .sparkle-hover-animation__sparkle-set-one {
    &:before {
        animation: sparkleBottomLeft 1s 0.1s infinite;
      }
    &:after {
    animation: sparkleTopRight 1s 0.1s infinite;
  }
  }
  .sparkle-hover-animation__sparkle-set-two {
   &:before {
        animation: sparkleTopLeft 1s 0.25s infinite;
      }
      &:after {
        animation: sparkleBottomRight 1s 0.25s infinite;
      }
  }
}
