<div class="page-width">
  <button type="button" class="collapsible-trigger collapsible-trigger--inline collapsible--auto-height text-left" aria-controls="Career-content-{{ block.id }}">
    {% include 'collapsible-icons-alt', no_circle: true %}
    {{ block.settings.title }}
  </button>
  <div id="Career-content-{{ block.id }}" class="collapsible-content collapsible-content--all">
    <div class="collapsible-content__inner collapsible-content__inner--career rte">
      {{ block.settings.text }}
      <a class="btn" href="{{ block.settings.apply-btn }}">Apply here</a>
    </div>
  </div>
  
</div>