<style>
/* Style The Dropdown Button */
.__lang-switcher__1TZpo {    
  padding: 16px 8px;  
  border: none;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
}

.__caret__3V7TX {
  width: 14px;
  height: 14px;  
}

/* The container <div> - needed to position the dropdown content */
.__dropdown__1HKJW {
  position: relative;
  display: inline-block;
}

/* Dropdown Content (Hidden by Default) */
.__dropdown-content__2tNYJ {
  display: none;
  position: absolute;
  background-color: #f9f9f9;
  min-width: 65px;
  box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
  z-index: 1;
}

/* Links inside the dropdown */
.__dropdown-content__2tNYJ a {
  color: black;
  padding: 12px 16px;
  text-decoration: none;
  display: block;
}

/* Change color of dropdown links on hover */
.__dropdown-content__2tNYJ a:hover {
  background-color: #f1f1f1
}

/* Show the dropdown menu on hover */
.__dropdown__1HKJW:hover .__dropdown-content__2tNYJ {
  display: block;
}
</style>
<div class="__dropdown__1HKJW">
    <button class="__lang-switcher__1TZpo">
        <span class="tw-uppercase tw-text-black">{{request.locale.iso_code}}</span>
        <span class="__caret__3V7TX">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 14.0 14.0" height="14.0px" width="14.0px" style="position: absolute;">
            <path d="M2 5.5 L7.0 10.5 L12.0 5.5" fill="transparent" stroke="#000000" stroke-width="1px"></path>
          </svg>
        </span>
    </button>
    <div class="__dropdown-content__2tNYJ">      
      {% assign route = request.path | replace_first: routes.root_url, '/' | replace_first: '//', '/' %}         
      <a data-ly-locked="true" href="{{ shop.url }}{{ route }}">EN</a>
      <a data-ly-locked="true" href="{{ shop.url }}/fr{{ route }}">FR</a>      
    </div>
  </div>