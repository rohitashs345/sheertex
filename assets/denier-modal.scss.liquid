#denier-modal { 
  background: rgba(0, 0, 0, 0.5);
  z-index: 99999;

  .modal__inner {
    @media (max-width: 768px) {
      margin: 0;
    }
  }

  .modal__centered {
    @media (max-width: 768px) {
      height: 100%;
      width: 100%;
    }
  }

  .modal__centered-content {
    position: relative;
  }

  .modal-content {
    color: black;
    margin: 5% auto;
    width: 49.75rem;
    height: 42.875rem;
    padding: 60px 40px;

    @media (max-width:900px){
      width: 42rem;
    }

    @media (max-width: 768px) {
      height: 100%;
      margin: 0;
      width: 100%;
      max-height: 100vh;
      overflow-y: auto;
    }

  }

  

  .modal__close {
    color: black;
    position: absolute;
    padding: 20px;
  }

  .modal-header {
    border-bottom: none;
    font-family: 'Agrandir';
    font-size: 1.23rem;
    font-weight: 700;
    line-height: 1.2;
    letter-spacing: 1.67px;
    text-transform: uppercase;
    justify-content: center;
    margin-bottom: 0.75rem;
  }

}


#denier-modal {

  .grid {
    display: grid;
    grid-column-gap: 2rem;
    -moz-column-gap: 2rem;
    grid-column-gap: 2rem;
    column-gap: 2rem;
    margin: 0 auto;

    @media (max-width: 768px) {
        margin-left: 3.75rem;
        margin-right: 3.75rem;
        margin-bottom: 5rem;
    }

    @media (max-width: 560px) {
        margin-left: 0rem;
        margin-right: 0rem; 
    }

  }

  .relative {
    position: relative;
  }

  .row-start-1 {
    grid-row-start: 1;
  }
}


@media (min-width: 768px){
  #denier-modal .md\:grid-cols-2 {
    grid-template-columns: repeat(2, minmax(0, 1fr));
  }

  .md\:mt-40 {
      margin-top: 10rem;
  }

  .md\:pt-14 {
    padding-top: 3.5rem;
  }
}






#denier-modal .denier-slider {
  -webkit-appearance:none;
  width:85%;
  position:relative;
  cursor:pointer;
  margin-bottom: 2rem;
  border: none;
  padding: 0px;
  outline-color: rgb(232, 232, 242);

  &::before {
    position:absolute;
    content:'';
    top:-20px;
    right:-10px;
    left:-10px;
    bottom:-20px;
    box-sizing: border-box;
    border-width: 0;
    border-style: solid;
  }

  &::-webkit-slider-runnable-track {
    width:100%;
    height:0.5px;
    cursor:pointer;
    background:black;
  }

  &::-webkit-slider-thumb {
    -webkit-appearance:none;
    background-color:black;
    width:58px;
    height:10px;
    margin-top:-4px;
  }

  &::-moz-range-track {
    width:100%;
    height:0.5px;
    cursor:pointer;
    background:black;
  }

  &::-moz-range-square {
    -webkit-appearance:none;
    background-color:black;
    width:58px;
    height:28px;
    margin-top:-14px;
  }

  &::-ms-track {
    width:100%;
    height:0.5px;
    cursor:pointer;
    background:black;
  }

  &::-ms-square {
    -webkit-appearance:none;
    background-color:black;
    width:58px;
    height:28px;
    margin-top:-14px;
  }

  &.denier-slider-with-thumb::-webkit-slider-thumb{
    -webkit-appearance:none;
    background-image:url(data:image/svg+xml;base64,);
    width:58px;
    height:28px;
    margin-top:-14px;
    background-color: transparent;
  }
}


.sm\:pb-4 {
  padding-bottom: 1rem;
}
.sm\:mx-4 {
  margin-left: 1rem;
  margin-right: 1rem;
}

#denier-modal {
  .denier-description {
    font-size: 1rem;
    max-width: 28rem;
    margin: 0 auto;
    display: inline-block;
  }

  .label-text {
    font-size: 0.75rem;
    text-transform: uppercase;
    font-family: 'Agrandir';
    font-weight: 500;
    letter-spacing: 1.29px;
  }

  .skin-tone-carousel {
    @media (max-width: 768px) {
      padding-top: 2rem;
    }
  }

  .skin-tone-labels,
  .denier-labels {
    display: flex;
    align-items: center;
    justify-content: space-between;
    
    span {
      cursor: pointer;
    }
  }

  .denier-labels {
    margin-bottom: 3rem;
  }

  .skin-tone-labels {
    margin-bottom: 1rem;

    span {
      width: 33%;
    }
  }

  .denier-carousel {
    margin-top: 11rem;

    @media (max-width: 768px) {
      margin-top: 5rem;
    }
  }
  .denier-description-container {
    display: flex;
    align-items: center;

    .description {
      display: flex;
      flex-direction: column;
      text-align: left;
    }

    .picture-container {
      margin-right: 1.25rem;
      flex-basis: 101px;
      flex-shrink: 0;
    }
  }
}


/* CSS from slick-carousel */
#denier-modal {
  .slick-slider {
    position: relative;

    display: block;
    box-sizing: border-box;

    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;

    -webkit-touch-callout: none;
    -khtml-user-select: none;
    -ms-touch-action: pan-y;
    touch-action: pan-y;
    -webkit-tap-highlight-color: transparent;

    .slick-track,
    .slick-list {
      -webkit-transform: translate3d(0, 0, 0);
      -moz-transform: translate3d(0, 0, 0);
      -ms-transform: translate3d(0, 0, 0);
      -o-transform: translate3d(0, 0, 0);
      transform: translate3d(0, 0, 0);
      transition: transform 0.5s ease;
    }

  }
  .slick-list {
    position: relative;

    display: block;
    overflow: hidden;

    padding: 0;

    width: 320px;
    margin: 0 auto;  

    @media (max-width: 900px){
      width: 279px;
    }

    @media (max-width: 768px){
      width: 100%;
    }  
    
    &:focus {
      outline: none;
    }
    &.dragging {
      cursor: pointer;
      cursor: hand;
    }
  }

  .slick-track {
    position: relative;
    top: 0;
    left: 0;

    display: block;
    margin-left: auto;
    margin-right: auto;

    width: 960px;
    opacity: 1;
    transform: translate3d(0px, 0px, 0px);

    @media (max-width: 900px){
      width: 837px;
    }

    @media (max-width: 768px){
      width: 100%;
      overflow: visible;
    }

    &:before,
    &:after {
      display: table;
      content: '';
    }
    &:after {
      clear: both;
    }
  }

  .slick-loading .slick-track {
    visibility: hidden;
  }

  .slick-slide {
    float: left;
    height: 100%;
    min-height: 1px;
    outline: none;
    width: 320px;

    @media (max-width: 900px){
      width: 279px;
    }

    @media (max-width: 768px){
      width: 100%;
      float: none;
      display: none;
    }

    img {
      display: block;
    }

    &.slick-loading img {
      display: none;
    }
    &.dragging img {
      pointer-events: none;
    }
  }

  [dir='rtl'] .slick-slide {
    float: right;
  }


  .slick-loading .slick-slide {
    visibility: hidden;
  }
  
} 
/* END CSS from slick-carousel */

  